{
    "compilerOptions": {
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true, // To lint express only. Use @ts-ignore if it causes trouble.
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ],
            "~/shared_types": ["src/shared_types"],
            "~/client_types": ["src/client/client_types"],
            "~/server_types": ["src/server/server_types"],
            "~/client_constants": ["src/client/client_constants"],
            "~/server_constants": ["src/server/server_constants"],
        }
    },
    "sourceMaps": true,
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}
